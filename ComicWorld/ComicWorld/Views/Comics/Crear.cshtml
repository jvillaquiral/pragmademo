@model ComicWorld.Models.Comic
@{
    ViewBag.Title = "Comic World - Registro de comics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Body {
<h3>Ingreso de nuevos comics</h3>
@using (Html.BeginForm("Crear", "Comics", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="login">
        <label>Título:</label>
        @Html.TextBoxFor(m => m.titulo)
        <label>Descripción:</label>
        @Html.TextAreaFor(m => m.descripcion)
        <label>Precio:</label>
        @Html.TextBoxFor(m => m.precio)
        <label>Foto:</label>
        <input type="file" name="archivo" />
        @Html.ValidationSummary()
        <input type="submit" value="Crear" />
    </div>
}
}
